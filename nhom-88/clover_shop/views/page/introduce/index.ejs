<% include ./../../element/header-2 %>
<!-- content -->
<div class="container container1">

    <div class=" justify-content-center">

        <div class="col-lg-12">

            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class=""></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2" class=""></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="./img/banner-2.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="./img/WEb-1.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="./img/Web-2.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="row">
                <!-- nav-bar-right -->
                <% include ./../../element/nav-bar-right %>
                <!-- /.col-lg-2 -->

                <div class="col-lg-10">
                    <div id="titleCart">
                        <div class="step3">
                            <i>SẢN PHẨM NỔI BẬT</i>
                        </div>
                        <span id="bdTCart"></span>
                    </div>

                    <div class="row">

                        <% items.forEach((item)=>{ if(item.type == "0") {%>
                        <div class="col-lg-3 col-md-3 col-sm-4 mb-4 product-card">
                            <div class="card h-100">
                                <a href="/danh-muc-san-pham/thong-tin-chi-tiet/<%= item.id %>"><img
                                        class="card-img-top img-size" src="<%= item.link_img[0] %>" alt=""></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a
                                            href="/danh-muc-san-pham/thong-tin-chi-tiet/<%= item.id %> "><%= item.name %></a>
                                    </h4>
                                    <h6><%= item.price %>đ</h6>
                                    <!-- <p class="card-text"><%= item.desc %></p> -->
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">★ ★ ★ ★ ☆</small>
                                </div>
                            </div>
                        </div>
                        <% }}) %>
                    </div>

                    <div id="titleCart">
                        <div class="step3">
                            <i>SẢN PHẨM MỚI</i>
                        </div>
                        <span id="bdTCart"></span>
                    </div>

                    <div class="row">

                        <% items.forEach((item)=>{ if(item.type == "1") {%>
                        <div class="col-lg-3 col-md-3 col-sm-4 mb-4 product-card">
                            <div class="card h-100">
                                <a href="/danh-muc-san-pham/thong-tin-chi-tiet/<%= item.id %>"><img
                                        class="card-img-top img-size" src="<%= item.link_img[0] %>" alt=""></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a
                                            href="/danh-muc-san-pham/thong-tin-chi-tiet/<%= item.id %> "><%= item.name %></a>
                                    </h4>
                                    <h6><%= item.price %>đ</h6>
                                    <!-- <p class="card-text"><%= item.desc %></p> -->
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">★ ★ ★ ★ ☆</small>
                                </div>
                            </div>
                        </div>
                        <% }}) %>
                    </div>

                    <div id="titleCart">
                        <div class="step3">
                            <i>TRẺ TRUNG - NĂNG ĐỘNG</i>
                        </div>
                        <span id="bdTCart"></span>
                    </div>

                    <div class="row">

                        <% items.forEach((item)=>{ if(item.type == "2") {%>
                        <div class="col-lg-3 col-md-3 col-sm-4 mb-4 product-card">
                            <div class="card h-100">
                                <a href="/danh-muc-san-pham/thong-tin-chi-tiet/<%= item.id %>"><img
                                        class="card-img-top img-size" src="<%= item.link_img[0] %>" alt=""></a>
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <a
                                            href="/danh-muc-san-pham/thong-tin-chi-tiet/<%= item.id %> "><%= item.name %></a>
                                    </h4>
                                    <h6><%= item.price %>đ</h6>
                                    <!-- <p class="card-text"><%= item.desc %></p> -->
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">★ ★ ★ ★ ☆</small>
                                </div>
                            </div>
                        </div>
                        <% }}) %>
                    </div>

                </div>
            </div>



        </div>
        <!-- /.col-lg-12 -->

    </div>
    <!-- /.row -->
</div>

<style>
    #titleCart {
        position: relative;
        text-align: center;
        padding: 13px 0;
    }

    #titleCart>div {
        display: inline-block;
        vertical-align: top;
        font-size: 13px;
        text-align: center;
        width: 300px;
    }

    #titleCart>div>i {
        width: 200px;
        height: 25px;
        /* border-radius: 50%; */
        line-height: 23px;
        box-shadow: 0 0 0 6px #fff;
        display: block;
        text-align: center;
        font-style: normal;
        font-size: 18px;
        margin: 0 auto 10px;
        background: white;
        color: #000;
        font-weight: 700;
        z-index: 1;
        position: relative;
    }

    #bdTCart {
        position: absolute;
        height: 1px;
        width: 100%;
        border-top: 1px solid #dc3545;
        top: 26px;
        left: 0px;
    }

    .row {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-right: 0px;
        margin-left: 0px;
    }

    @media (min-width: 1200px) {
        .container1 {
            max-width: 1400px;
        }
    }
</style>